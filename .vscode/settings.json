{
    "cmake.sourceDirectory": "${workspaceFolder}/SourceCode",
    "cmake.buildDirectory": "${workspaceFolder}/BuildEnvironment",
    "[c]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[python]": {
        "editor.quickSuggestions": {
            "strings": true
        }
    },
    "[cmake]": {
        "editor.quickSuggestions": {
            "strings": true
        }
    },
    "editor.tabSize": 2,
    "editor.autoClosingComments": "always",
    "editor.indentSize": "tabSize",
    "editor.insertSpaces": true,
    "VSCodeCounter.exclude": [
        "**/.gitignore",
        "**/.vscode/**",
        "**/node_modules/**",
        "**/*.ini",
        "**/.VSCodeCounter/**"
    ],
    "files.exclude": {
        "**/.git": false,
        "**/.vscode": false
    },
    "C_Cpp.doxygen.generatedStyle": "/*!",
    "C_Cpp.doxygen.sectionTags": [
        "attention",
        "tparam",
        "param",
        "result",
        "returns",
        "retval",
        "exception",
        "deprecated",
        "warning",
        "note",
    ],
    "C_Cpp.simplifyStructuredComments": false,
    "editor.formatOnSave": true,
    "clang-format.executable": "C:/Users/jason/Desktop/Projects/NBodySimulator/.Configuration/Clang/clang-format.exe",
    "cmake.configureOnOpen": true
}